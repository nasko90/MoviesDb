        <Button x:Name="Add" Content="Add to DB" HorizontalAlignment="Left" Margin="151,268,0,0" VerticalAlignment="Top" Width="95" Height="26" Click="Add_Click"/>
        <TextBox x:Name="LogMessage" HorizontalAlignment="Left" Visibility="Hidden" Height="60" Margin="42,299,0,0" FontSize="16" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="313"/>

    </Grid>
</Window>
