        <TextBlock x:Name="DateOfBirthBlock" Text="Date of birth " HorizontalAlignment="Left" FontSize="18" TextWrapping="Wrap" TextAlignment="Right"  VerticalAlignment="Top" Margin="10,127,0,0" Width="121" Height="26"/>
        <TextBlock x:Name="NationalityBlock" Text="Nationality " HorizontalAlignment="Left" FontSize="18" TextWrapping="Wrap" TextAlignment="Right"  VerticalAlignment="Top" Margin="10,170,0,0" Width="121" Height="26"/>
        <TextBlock x:Name="GenderBlock" Text="Gender " HorizontalAlignment="Left" FontSize="18" TextWrapping="Wrap" TextAlignment="Right"  VerticalAlignment="Top" Margin="10,213,0,0" Width="121" Height="26"/>
        <TextBox x:Name="Name" HorizontalAlignment="Left" FontSize="18" Height="26" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="221" Margin="151,85,0,0"/>
        <TextBox x:Name="DateOfBirth" HorizontalAlignment="Left" FontSize="18" Height="26" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="221" Margin="151,127,0,0" RenderTransformOrigin="0.528,2.625"/>
