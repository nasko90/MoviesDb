        <TextBlock x:Name="textBlock" FontSize="16" HorizontalAlignment="Center" Margin="25,10,25,0" TextWrapping="Wrap" Text="Choose in which category to add?" VerticalAlignment="Top" Width="192" Height="58"/>
        <RadioButton x:Name="Actors" Content="Actors" HorizontalAlignment="Left" Margin="25,78,0,0" VerticalAlignment="Top" Height="17" Width="62"/>
        <RadioButton x:Name="Directors" Content="Directors" HorizontalAlignment="Left" Margin="140,78,0,0" VerticalAlignment="Top" Height="17" Width="77"/>
